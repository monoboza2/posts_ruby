<style>
table, th, td {
  border: 1px solid;
}
</style>
<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Body</th>
        <th>Photo</th>
        <th>Published</th>
        <th>Author</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <%= render post %>
        <td>
          <%= link_to "Show this post", post %>
        </td>
      </tr>
  <% end %>
    
    </tbody>
  </table>
</div>



<%= link_to "New post", new_post_path %>
